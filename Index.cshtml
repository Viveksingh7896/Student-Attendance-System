@{
    ViewData["Title"] = "Dashboard";
}

<div class="text-center mb-4">
    <h1 class="display-4"><i class="bi bi-calendar-check-fill"></i> Student Attendance System</h1>
    <p class="lead">Welcome to the Attendance Management Portal</p>
</div>

<div class="row mt-5">
    <div class="col-md-4">
        <div class="card text-center stat-card">
            <div class="card-body">
                <i class="bi bi-people-fill text-primary" style="font-size: 3rem;"></i>
                <h2 class="mt-3">@ViewBag.TotalStudents</h2>
                <p class="card-text">Total Active Students</p>
                <a asp-controller="Student" asp-action="Index" class="btn btn-primary btn-sm">
                    View All Students
                </a>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card text-center stat-card">
            <div class="card-body">
                <i class="bi bi-journal-bookmark-fill text-success" style="font-size: 3rem;"></i>
                <h2 class="mt-3">@ViewBag.TotalClasses</h2>
                <p class="card-text">Total Classes</p>
                <a href="#" class="btn btn-success btn-sm">
                    View Classes
                </a>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card text-center stat-card">
            <div class="card-body">
                <i class="bi bi-clipboard-check-fill text-info" style="font-size: 3rem;"></i>
                <h2 class="mt-3">@ViewBag.TodayAttendance</h2>
                <p class="card-text">Today's Attendance Marked</p>
                <a asp-controller="Attendance" asp-action="ViewAttendance" class="btn btn-info btn-sm">
                    View Today's Attendance
                </a>
            </div>
        </div>
    </div>
</div>

<div class="row mt-5">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0"><i class="bi bi-lightning-fill"></i> Quick Actions</h5>
            </div>
            <div class="card-body">
                <div class="list-group list-group-flush">
                    <a asp-controller="Attendance" asp-action="MarkAttendance" class="list-group-item list-group-item-action">
                        <i class="bi bi-plus-circle-fill text-primary"></i> Mark Today's Attendance
                    </a>
                    <a asp-controller="Student" asp-action="Create" class="list-group-item list-group-item-action">
                        <i class="bi bi-person-plus-fill text-success"></i> Add New Student
                    </a>
                    <a asp-controller="Report" asp-action="ClassReport" class="list-group-item list-group-item-action">
                        <i class="bi bi-file-earmark-bar-graph-fill text-info"></i> Generate Class Report
                    </a>
                    <a asp-controller="Report" asp-action="StudentReport" class="list-group-item list-group-item-action">
                        <i class="bi bi-person-badge-fill text-warning"></i> View Student Report
                    </a>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card">
            <div class="card-header bg-info text-white">
                <h5 class="mb-0"><i class="bi bi-info-circle-fill"></i> System Information</h5>
            </div>
            <div class="card-body">
                <p><strong>Date:</strong> @DateTime.Now.ToString("dddd, MMMM dd, yyyy")</p>
                <p><strong>System Status:</strong> <span class="badge bg-success">Active</span></p>
                <hr>
                <h6>Features:</h6>
                <ul class="list-unstyled">
                    <li><i class="bi bi-check-circle-fill text-success"></i> Student Management</li>
                    <li><i class="bi bi-check-circle-fill text-success"></i> Daily Attendance Marking</li>
                    <li><i class="bi bi-check-circle-fill text-success"></i> Bulk Attendance Entry</li>
                    <li><i class="bi bi-check-circle-fill text-success"></i> Comprehensive Reports</li>
                    <li><i class="bi bi-check-circle-fill text-success"></i> Attendance Analytics</li>
                </ul>
            </div>
        </div>
    </div>
</div>
