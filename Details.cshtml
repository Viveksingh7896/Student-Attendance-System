@model StudentAttendanceSystem.Models.Student

@{
    ViewData["Title"] = "Student Details";
}

<h2><i class="bi bi-person-circle"></i> Student Details</h2>
<hr />

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0">@Model.FullName</h4>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4">Student ID Number</dt>
                    <dd class="col-sm-8"><span class="badge bg-secondary">@Model.StudentIdNumber</span></dd>

                    <dt class="col-sm-4">First Name</dt>
                    <dd class="col-sm-8">@Model.FirstName</dd>

                    <dt class="col-sm-4">Last Name</dt>
                    <dd class="col-sm-8">@Model.LastName</dd>

                    <dt class="col-sm-4">Email</dt>
                    <dd class="col-sm-8">@Model.Email</dd>

                    <dt class="col-sm-4">Phone Number</dt>
                    <dd class="col-sm-8">@Model.PhoneNumber</dd>

                    <dt class="col-sm-4">Class</dt>
                    <dd class="col-sm-8">@Model.Class?.FullClassName</dd>

                    <dt class="col-sm-4">Enrollment Date</dt>
                    <dd class="col-sm-8">@Model.EnrollmentDate.ToString("MMMM dd, yyyy")</dd>

                    <dt class="col-sm-4">Status</dt>
                    <dd class="col-sm-8">
                        @if (Model.IsActive)
                        {
                            <span class="badge bg-success">Active</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Inactive</span>
                        }
                    </dd>
                </dl>
            </div>
        </div>

        <div class="card mt-4">
            <div class="card-header bg-info text-white">
                <h5 class="mb-0"><i class="bi bi-bar-chart-fill"></i> Attendance Statistics</h5>
            </div>
            <div class="card-body">
                <div class="row text-center">
                    <div class="col-md-3">
                        <h3 class="text-primary">@ViewBag.TotalDays</h3>
                        <p class="text-muted">Total Days</p>
                    </div>
                    <div class="col-md-3">
                        <h3 class="text-success">@ViewBag.PresentDays</h3>
                        <p class="text-muted">Present</p>
                    </div>
                    <div class="col-md-3">
                        <h3 class="text-danger">@(ViewBag.TotalDays - ViewBag.PresentDays)</h3>
                        <p class="text-muted">Absent</p>
                    </div>
                    <div class="col-md-3">
                        <h3 class="text-warning">@ViewBag.AttendancePercentage%</h3>
                        <p class="text-muted">Attendance %</p>
                    </div>
                </div>
                <div class="progress mt-3" style="height: 25px;">
                    <div class="progress-bar bg-success" role="progressbar" style="width: @ViewBag.AttendancePercentage%">
                        @ViewBag.AttendancePercentage%
                    </div>
                </div>
            </div>
        </div>

        <div class="mt-4">
            <a asp-action="Edit" asp-route-id="@Model.StudentId" class="btn btn-warning">
                <i class="bi bi-pencil"></i> Edit
            </a>
            <a asp-controller="Report" asp-action="StudentReport" asp-route-studentId="@Model.StudentId" class="btn btn-info">
                <i class="bi bi-file-earmark-text"></i> View Full Report
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
        </div>
    </div>
</div>
