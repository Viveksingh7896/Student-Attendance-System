@model IEnumerable<StudentAttendanceSystem.Models.Attendance>

@{
    ViewData["Title"] = "View Attendance";
}

<h2><i class="bi bi-eye-fill"></i> View Attendance Records</h2>
<hr />

<div class="card mb-4">
    <div class="card-body">
        <form asp-action="ViewAttendance" method="get">
            <div class="row g-3">
                <div class="col-md-5">
                    <label class="form-label">Filter by Class</label>
                    <select name="classId" class="form-select" asp-items="ViewBag.Classes">
                        <option value="">All Classes</option>
                    </select>
                </div>
                <div class="col-md-4">
                    <label class="form-label">Select Date</label>
                    <input type="date" name="date" class="form-control" value="@ViewBag.SelectedDate?.ToString("yyyy-MM-dd")" />
                </div>
                <div class="col-md-3">
                    <label class="form-label">&nbsp;</label>
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="bi bi-search"></i> Filter
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>

@if (Model != null && Model.Any())
{
    <div class="card">
        <div class="card-header bg-info text-white">
            <h5 class="mb-0">
                Attendance for @ViewBag.SelectedDate?.ToString("dddd, MMMM dd, yyyy")
                - <strong>@Model.Count()</strong> records found
            </h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>Student ID</th>
                            <th>Student Name</th>
                            <th>Class</th>
                            <th>Status</th>
                            <th>Remarks</th>
                            <th>Marked By</th>
                            <th>Marked At</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td><span class="badge bg-secondary">@item.Student?.StudentIdNumber</span></td>
                                <td>@item.Student?.FullName</td>
                                <td>@item.Class?.FullClassName</td>
                                <td>
                                    @switch (item.Status)
                                    {
                                        case AttendanceStatus.Present:
                                            <span class="badge bg-success"><i class="bi bi-check-circle-fill"></i> Present</span>
                                            break;
                                        case AttendanceStatus.Absent:
                                            <span class="badge bg-danger"><i class="bi bi-x-circle-fill"></i> Absent</span>
                                            break;
                                        case AttendanceStatus.Late:
                                            <span class="badge bg-warning"><i class="bi bi-clock-fill"></i> Late</span>
                                            break;
                                        case AttendanceStatus.Excused:
                                            <span class="badge bg-info"><i class="bi bi-exclamation-circle-fill"></i> Excused</span>
                                            break;
                                    }
                                </td>
                                <td>@item.Remarks</td>
                                <td>@item.MarkedBy</td>
                                <td>@item.MarkedAt.ToString("hh:mm tt")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="row mt-4">
                <div class="col-md-3">
                    <div class="card text-center">
                        <div class="card-body">
                            <h3 class="text-success">@Model.Count(a => a.Status == AttendanceStatus.Present)</h3>
                            <p class="mb-0">Present</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card text-center">
                        <div class="card-body">
                            <h3 class="text-danger">@Model.Count(a => a.Status == AttendanceStatus.Absent)</h3>
                            <p class="mb-0">Absent</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card text-center">
                        <div class="card-body">
                            <h3 class="text-warning">@Model.Count(a => a.Status == AttendanceStatus.Late)</h3>
                            <p class="mb-0">Late</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card text-center">
                        <div class="card-body">
                            <h3 class="text-info">@Model.Count(a => a.Status == AttendanceStatus.Excused)</h3>
                            <p class="mb-0">Excused</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="alert alert-info">
        <i class="bi bi-info-circle-fill"></i> No attendance records found for the selected criteria.
    </div>
}
